~doLogin(requestLogin: RequestLogin): Call<ResponseAuth>

}

Interface AuthApiService{

    ~getAllUsers(): Call<List<User>>
    ~getUserDetails(String id):Call<UserDetails>
    ~setNewUser(UserDetails userDetails): Call<User>
    ~updateUser(UserInfo userInfo): Call<String>
    ~setUserData(RequestSendData userData): Call<String>
    ~initSession(Session session): Call<String>
    ~stopSession(JsonObject jsonObject): Call<String>

}

